generator client {
  provider = "prisma-client-js"
}

generator prismaClassGenerator {
  provider      = "prisma-class-generator"
  output        = "../apps/server/src/generated"
  dryRun        = false
  makeIndexFile = false
  classPostfix  = "Props"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  avatar   String?
  password String
}
