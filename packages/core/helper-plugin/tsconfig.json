{
	"compilerOptions": {
		"module": "CommonJS",
		"moduleResolution": "node",
		"lib": ["ES2016", "DOM"],
		"target": "ES2016",

		"jsx": "react",
		"sourceMap": true,
		"declaration": true,
		"declarationDir": "dist",

		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,

		"outDir": "lib"
	},
	"include": ["src"]
}
