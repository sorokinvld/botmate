{
	"extends": "@botmate/typescript-utils/tsconfigs/server",
	"compilerOptions": {
		"outDir": "lib",
		"rootDir": "./src",
		"baseUrl": "./src",
		"declaration": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"declarationMap": true,
		"sourceMap": true
	},
	"include": ["./src/**/*.ts"],
	"exclude": [
		"node_modules/",
		"build/",
		"dist/",
		".cache/",
		".tmp/",
		"src/admin/",
		"**/*.test.ts",
		"src/plugins/**"
	]
}
